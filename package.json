{
	"name": "rubyblue-theme-richs",
    "displayName": "RubyBlue Theme (RichS)",
	"description": "Dark, high contrast theme.",
	"version": "1.0.2",
	"publisher": "hirofumii",
    "icon": "icon.png",
	"scripts": {
		"install:create": "mkdir -p $HOME/.vscode/extensions/RubyBlueThemeRichS/themes",
		"install:copy:theme": "cp themes/* $HOME/.vscode/extensions/RubyBlueThemeRichS/themes",
		"install:copy:package": "cp package.json $HOME/.vscode/extensions/RubyBlueThemeRichS",
		"install": "npm run install:create && npm run install:copy:theme && npm run install:copy:package"
	},
    "galleryBanner": {
        "color": "#112435",
        "theme": "dark"
    },
	"engines": {
		"vscode": "^0.10.1"
	},
	"categories": [
		"Themes"
	],
	"contributes": {
		"themes": [
			{
				"label": "Ruby Blue",
				"uiTheme": "vs-dark",
				"path": "./themes/RubyBlueRichS.tmTheme"
			}
		]
	}
}